<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.practica1.MainActivity">

    <RelativeLayout
        android:id="@+id/superior"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
      >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/Menú_Principal"
            android:textSize="30dp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:id="@+id/centre"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/btnJugar"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/Jugar" />

        <Button
            android:id="@+id/btnRanq"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_below="@+id/btnJugar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/Ranquing" />

        <Button
            android:id="@+id/btnAjus"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_below="@id/btnRanq"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="@string/Ajustaments" />

        <Button
            android:id="@+id/btnInfo"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btnAjus"
            android:text="@string/Informació" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/inferior"
        android:layout_below="@+id/centre"
       >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Jordi Vidal Roselló"
            android:gravity="center"/>

    </RelativeLayout>


</RelativeLayout>
